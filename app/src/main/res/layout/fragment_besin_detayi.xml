<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.BesinDetayiFragment">

    <ImageView
        android:id="@+id/besinDetayImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/besinIsimTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isim"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/besinKaloriTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalori"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/besinKarbonhidratTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karbonhidrat"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/besinProteinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/besinYagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yag"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="25dp"/>


</LinearLayout>
</layout>