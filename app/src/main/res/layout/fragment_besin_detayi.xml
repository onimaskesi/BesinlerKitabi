<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="besin"
            type="com.onimaskesi.besinlerkitabi.model.Besin" />

    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.BesinDetayiFragment">

    <ImageView
        android:id="@+id/besinDetayImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:downloadImage="@{besin.besinGorsel}"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/besinIsimTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{besin.besinIsim}"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/besinKaloriTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{besin.besinKalori}"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/besinKarbonhidratTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{besin.besinKarbonhidrat}"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/besinProteinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{besin.besinProtein}"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/besinYagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{besin.besinYag}"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="25dp"/>


</LinearLayout>
</layout>